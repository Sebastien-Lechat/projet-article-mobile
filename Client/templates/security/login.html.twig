{% extends 'base.html.twig' %} {% block title %} Connexion au site {% endblock %} {% block body %}
<div class="content">
    <div class="login-form">


        <form action="{{path('app_login')}}" method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %} {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal login-title">Connexion</h1>
            <div class="from-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div>
                &nbsp;
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <div>
                &nbsp;
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div style="text-align: right;">
                <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            </div>
        </form>
        <div>
            <div>

                {% endblock %}