<div class="article-container">
    <h1> Liste des articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ article.subtitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.img }}</td>
            </tr>
            <tr>
                <th>Link</th>
