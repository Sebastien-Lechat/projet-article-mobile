{% extends 'base.html.twig' %} {% block title %}Liste des articles{% endblock %} {% block body %}
<div class="content">
    <div class="article-container">
        <div class="align-center" style="margin-bottom: 25px;">
            <h1 style="margin: 0;">Liste des articles</h1>
            <button type="button" class="btn btn-primary btn-add"><a href="{{ path('article_new') }}"><i class="fas fa-plus"></i> Cr√©er un nouveau </a></button>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Subtitle</th>
                    <!-- <th>Description</th> -->
                    <th>Image</th>
                    <th>Lien</th>
                    {#
                    <th>Created_At</th>
                    <th>Update_At</th> #}
                    <th>Modifier/Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.subtitle }}</td>
                    <!-- <td>{{ article.description |raw}}</td> -->
                    <td style="text-align: center;"><img src="{{ article.img }}" alt="" width="70%"> </td>
                    <td>{{ article.link }}</td>
                    {#
                    <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ article.updateAt ? article.updateAt|date('Y-m-d H:i:s') : '' }}</td> #}

                    <td style="text-align: center;">
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger"> <i class="fas fa-trash"></i></a>
                    </td>

                </tr>
                {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}