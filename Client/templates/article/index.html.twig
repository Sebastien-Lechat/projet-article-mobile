{% extends 'base.html.twig' %} {% block title %}Liste des articles{% endblock %} {% block body %}
<div class="article-container">
    <div class="align-center" style="margin-bottom: 25px;">
        <h1 style="margin: 0;">Liste des articles</h1>
        <button type="button" class="btn btn-primary btn-add"><a href="{{ path('article_new') }}">Creer un nouveau </a></button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Subtitle</th>
                <!-- <th>Description</th> -->
                <th>Image</th>
                <th>Lien</th>
                {#
                <th>Created_At</th>
                <th>Update_At</th> #}
                <th>Voir</th>
                <th>Modifier/Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.subtitle }}</td>
                <!-- <td>{{ article.description |raw}}</td> -->
                <td>{{ article.img }}</td>
                <td>{{ article.link }}</td>
                {#
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updateAt ? article.updateAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td style="text-align: center;">
                    <button type="button" class="btn btn-primary"><a href="{{ path('article_show', {'id': article.id}) }}">Voir</a></button>
                </td>
                <td style="text-align: center;">
                    <button type="button" class="btn btn-primary"><a href="{{ path('article_edit', {'id': article.id}) }}">Modifier/Supprimer</a></button>
                </td>

            </tr>
            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}