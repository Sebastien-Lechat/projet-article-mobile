<form method="post" action="{{ path('flux_delete', {'id': flux.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce flux?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flux.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
