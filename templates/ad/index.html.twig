{% extends 'base.html.twig' %}
{% block title %}Bienvenue sur le meilleur réseau d'appartement!{% endblock %}
{% block body %}

  <div class="container">
            <h1 class="my-6"> Voici nos annonces d'appartements </h1>
           <div  class="row">
                {% for ad in ads %}
                  {% set url=path('ads_show',{'slug': ad.slug})%}
                  <div class="col-md-4">
                       <div class="card bg-light mb-3">
                           <div class="card-header"  text-center>
                              {{ad.rooms}}3 chambres <strong>{{ad.price}}&euro; /nuit</strong></br>
                              <small> Pas encore noté</small>
                              <a href="{{path('ads_show',{'slug': ad.slug})}}">
                          </div>
                           <img src="{{ad.coverImage}}" alt="Image appartement"
                            style="height:200px; width:100%; display:block">
                          <div class="card-body">
                              <h4 class="card-title">
                                  <a href="{{url}}">
                                   {{ad.title}}
                                  </a>
                                  
                              </h4>
                                <p class="card-text">
                                {{ad.introduction}}
                                </p>
                                <a href="{{url}}" class="btn btn-secondary"> En savoir plus!<a/>
                            </div>
                       </div>
                   </div>    
        
                {%endfor%}
            </div> 
 </div>
        
{% endblock %}
